doctype html
html(lang="en")
  head
    meta( charset="utf-8" )
    meta( name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" )
    // Dynamic title block
    block title

    link( rel="preconnect" href="https://fonts.gstatic.com")
    //- link( rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"  )
    //- link( rel="stylesheet" href="https://fonts.googleapis.com/css2?family=K2D&family=Roboto&display=swap" )
    link( rel="stylesheet" href="https://fonts.googleapis.com/css2?family=K2D&family=Rubik&display=swap" )
    //- link( rel="stylesheet" href="https://fonts.googleapis.com/css?family=Space+Mono|Muli" )
    link( rel="stylesheet", href="/styles/bootstrap.min.css"  )
    
    // build:css /styles/index.min.css
    link( rel='stylesheet', href='/styles/index.css'  )
    // endbuild

  //- body(class="dot-bg")
  body(class="dot-bg")

    // Skip to main
    a(class="visually-hidden-focusable" href="#main-content") Skip to main content

    // Site Header
    header(id="site-header" class="site-header fixed-top" role="banner")
      block header
    
    // Page Content
    main(id="main-content" class="site-main" role="main")
      block content

    // Call To Action
    include ./includes/cta

    // Site Footer
    footer(id="site-footer" class="site-footer" role="contentinfo")
      // Footer Decoration
      <svg class="footer-deco" preserveAspectRatio="none" viewBox="0 0 317.5 7.938"><path d="M0 7.94V.002C55.496 5.232 108.99 8.47 159.37 3.14 212.24 8.64 264.63 5.7 317.5.002V7.94z"/></svg>

      include ./includes/footer-nav
      //- include ./includes/bubble-anim.pug

    // Scripts
    script(src="/scripts/bootstrap.bundle.min.js")

    //- // build:js /scripts/index.min.js defer
    //- script(src="/scripts/index.js")
    //- // endbuild
