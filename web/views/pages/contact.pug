        .col 
          form(id="contact-form" class="card contact-form" method="POST" action="#")
            .card-header.p-3.text-center.cta-gold
              h4.title.m-0
                span      Leave a message
            .card-body
              .row.g-3
                div(class="input-group mb-3")
                  label(class="input-group-text" for="name") 
                    <span>Name </span><span>*</span>
                  input(type="text" class="form-control" id="name" required)
                
                div(class="input-group mb-3")
                  label(class="input-group-text" for="email") Email*
                  input(type="email" class="form-control" id="email" required)

                div(class="form-floating")
                  textarea(class="form-control form-message" placeholder="Leave a message or question" id="message" required)
                  label(for="message")   message*
                
              button(class="btn btn-gold" type="submit") Send
              //- p.small.
