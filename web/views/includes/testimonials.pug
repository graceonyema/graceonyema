section(id="testimonials" class="section")
  .container-fluid.container-md
    h2(class="title text-center") 
      span.sub-title  What others are saying
    //- div(id="testimonial-slide" class="carousel slide carousel-fade" data-bs-ride="carousel")
    div(id="testimonial-slide" class="carousel slide carousel-fade py-5" data-bs-ride="carousel")
    
      div(class="carousel-inner mb-3")
        +testimonialCard(testimonials)
      
      div(class="carousel-indicators position-relative rounded-3")
        button(type="button" data-bs-target="#testimonial-slide" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1")
        button(type="button" data-bs-target="#testimonial-slide" data-bs-slide-to="1" aria-label="Slide 2")
        button(type="button" data-bs-target="#testimonial-slide" data-bs-slide-to="2" aria-label="Slide 3")
        button(type="button" data-bs-target="#testimonial-slide" data-bs-slide-to="3" aria-label="Slide 4")
        button(type="button" data-bs-target="#testimonial-slide" data-bs-slide-to="4" aria-label="Slide 5")

      //- button(class="carousel-control-prev" type="button" data-bs-target="#testimonial-slide" data-bs-slide="prev")
        span(class="text-dark" aria-hidden="true")
          <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
            <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
          </svg>
        span(class="visually-hidden") Previous

      //- button(class="carousel-control-next" type="button" data-bs-target="#testimonial-slide" data-bs-slide="next")
        span(class="text-dark" aria-hidden="true")
          <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
            <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
          </svg>
        span(class="visually-hidden") Next
