mixin testimonialCard(testimonials)

    each testimonial, index in testimonials
      //- div #{index} #{testimonial.author} #{index==0}
      if index==0
        div(class="carousel-item active")
          figure(class="card testimonial-card")
            div(class="card-header border-0 d-flex justify-content-between")
              if testimonial.avatar!=""
                img(
                  src=`/assets/icons/${testimonial.avatar}`
                  class="img-thumbnail"
                  alt= ""
                  width="70"
                  height="100"
                  loading="lazy"
                )
              else 
                .avatar.rounded-circle  #{testimonial.initials}
              figcaption  
                p(class="m-0 card-title title author")  #{testimonial.author}
                p(class="m-0 text-muted small")  #{testimonial.desc}
            div(class="card-body ps-4 small")
              blockquote= testimonial.comment
            div(class="card-footer border-0")
              p(class="m-0 text-muted small") #{testimonial.type}
            
      else
        div(class="carousel-item")
          figure(class="card testimonial-card")
            div(class="card-header border-0 d-flex justify-content-between")
              if testimonial.avatar!=""
                img(
                  src=`/assets/icons/${testimonial.avatar}`
                  class="img-thumbnail"
                  alt= ""
                  width="70"
                  height="100"
                  loading="lazy"
                )
              else 
                .avatar.rounded-circle  #{testimonial.initials}
              figcaption  
                p(class="m-0 card-title title author")  #{testimonial.author}
                p(class="m-0 text-muted small")  #{testimonial.desc}
            div(class="card-body ps-4 small")
              blockquote= testimonial.comment
            div(class="card-footer border-0")
              p(class="m-0 text-muted small") #{testimonial.type}
              