mixin displayCard(item)
  .col
    div(class="card border-0 m-auto display-card")
      .row.g-0
        .col-3
          img(
            src=`/assets/icons/${item.poster}`
            class="img-thumbnail"
            alt= `${item.title}`
            width="100"
            height="150"
            loading="lazy"
          )
        
        .col-9
          div(class="card-body p-2 text-start")
            h3(class="small lh-base")    #{item.title}
            //- p(class="small text-start")= item.title

      if item.cta
        div
          a(class="btn rounded-0 btn-main w-100 ext-link" href=item.link target="_blank" rel="noopener") #{item.cta}
